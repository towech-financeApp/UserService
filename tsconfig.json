{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",                           
    "esModuleInterop": true,    
    "declaration": true,                    
    "outDir": "./lib",                              
    "strict": true,                                 
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "types": ["jest"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/tests/*", "src/server.ts"]
}
